<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>


<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.western.frontend.CreateController" stylesheets="@style.css" styleClass="background"
      onKeyTyped="#handleKeyInput">

    <VBox alignment="TOP_LEFT" style="-fx-padding: 10 0 0 10">
        <Button text="Back" onAction="#backProfile"/>
    </VBox>

    <VBox alignment="CENTER" spacing="60.0">
        <Label fx:id="welcomeText"/>
        <Text layoutX="107.0" layoutY="291.0" strokeType="OUTSIDE" strokeWidth="0.0" text="What's your name?">
            <font>
                <Font name="Arial Rounded MT Bold" size="45.0"/>
            </font>
        </Text>
        <TextField fx:id="usernameField" layoutX="200.0" layoutY="150.0" prefHeight="30.0" prefWidth="0.0"
                   maxWidth="200.0"/>
        <Button fx:id="finishButton" text="Finish  &gt;" onAction="#finishButtonClick"/>
    </VBox>

</VBox>
